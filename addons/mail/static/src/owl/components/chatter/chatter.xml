<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.component.Chatter" owl="1">
        <div class="o_Chatter">
            <ChatterTopbar
                class="o_Chatter_topbar"
                chatterLocalId="props.chatterLocalId"
                isComposerLog="state.isComposerLog"
                isComposerVisible="state.isComposerVisible"
                isDisabled="!storeProps.thread || storeProps.thread.isTemporary"
                t-on-o-chatter-topbar-log-note="_onTopbarLogNote"
                t-on-o-chatter-topbar-select-attachment="_onTopbarSelectAttachment"
                t-on-o-chatter-topbar-send-message="_onTopbarSendMessage"
            />
            <t t-if="storeProps.thread and storeProps.thread.composerLocalId and state.isComposerVisible">
                <Composer
                    class="o_Chatter_composer"
                    areButtonsInline="false"
                    composerLocalId="storeProps.thread.composerLocalId"
                    hasTextInputSendOnEnterEnabled="false"
                    isCompact="false"
                    isExpandable="true"
                    isLog="state.isComposerLog"
                    t-on-o-message-posted="_onComposerMessagePosted"
                    t-ref="composer"
                />
            </t>
            <t t-if="state.isAttachmentBoxVisible">
                <AttachmentBox
                    class="o_Chatter_attachmentBox"
                    threadLocalId="storeProps.chatter.threadLocalId"
                />
            </t>
            <t t-if="storeProps.chatter.threadLocalId">
                <Thread
                    class="o_Chatter_thread"
                    hasComposer="false"
                    haveMessagesAuthorRedirect="true"
                    order="'desc'"
                    threadLocalId="storeProps.chatter.threadLocalId"
                    t-att-class="{ 'o-is-temporary': storeProps.thread.isTemporary }"
                    t-ref="thread"
                />
            </t>
        </div>
    </t>

</templates>
