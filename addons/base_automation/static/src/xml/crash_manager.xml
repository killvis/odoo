<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-extend="CrashManager.error">
        <t t-jquery=".alert.alert-warning" t-operation="append">
            <t t-if="widget.options.base_automation_id">
                <p>
                    The error is due to the automated action
                    "<t t-esc="widget.options.base_automation_name"/>"
                    (#<t t-esc="widget.options.base_automation_id"/>).
                    <br/>
                </p>
                <p t-if="!widget.options.base_automation_is_admin">
                    You can ask an administrator to disable or correct this automated action.
                </p>
                <p t-if="widget.options.base_automation_is_admin">
                    You can disable the action or edit it to solve the issue.<br/>
                    Disabling this action will enable you to continue your workflow
                    but any data created after this could potentially be corrupted,
                    as you are effectively disabling a customization that may set
                    important and/or required fields.
                </p>
            </t>
        </t>
        <t t-jquery=".alert.alert-warning button" t-operation="after">
            <t t-if="widget.options.base_automation_id &amp;&amp; widget.options.base_automation_is_admin">
                <button class="btn btn-secondary ml8 o_disable_action_button" style="margin-top: 5px;">
                    <i class="fa fa-ban mr8"/>Disable Action
                </button>
                <button class="btn btn-secondary ml8 o_edit_action_button" style="margin-top: 5px;">
                    <i class="fa fa-edit mr8"/>Edit action
                </button>
            </t>
        </t>
    </t>
</templates>
