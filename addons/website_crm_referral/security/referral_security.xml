<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="module_referral_category" model="ir.module.category">
        <field name="name">Referral</field>
    </record>

    <record id="referral_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id"
               ref="module_referral_category"/>
        <field name="implied_ids"
               eval="[(4,ref('base.group_user'))]" />
    </record>

    <record id="referral_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id"
            ref="module_referral_category"/>
        <field name="implied_ids"
            eval="[(4, ref('referral_group_user'))]"/>
        <field name="users"
            eval="[(4, ref('base.user_root')),
                    (4, ref('base.user_admin'))]"/>
    </record>

</odoo>