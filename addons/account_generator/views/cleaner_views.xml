<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.act_window" id="account_cleaner_action">
        <field name="name">Clean</field>
        <field name="res_model">account.cleaner</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_account_cleaner_form" model="ir.ui.view">
        <field name="name">account.cleaner.form</field>
        <field name="model">account.cleaner</field>
        <field name="arch" type="xml">
            <form string="Account Generator">
                <sheet>
                    <field name="company_ids" widget="many2many_tags"/>
                    <button name="clean_account_move" type="object" string="Clean Amls"/>
                    <footer/>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_clean" action="account_generator.account_cleaner_action" parent="account_generator.menu_finance_dev_tools"/>
</odoo>
