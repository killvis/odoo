<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <template id="contactus_form" name="Contact Form (Opportunity)" inherit_id="website_form.contactus_form" customize_show="True">
            <xpath expr="//form[@id='contactus_form']" position="replace">
                <div t-ignore="true">
                    <form action="/website_form/" method="post" enctype="multipart/form-data" data-model_name="crm.lead" data-success-mode="redirect" data-success-page="/contactus-thank-you" class="o_mark_required" data-mark="*" data-editable-form="false">
                        <div class="o_form_rows row s_col_no_bgcolor">
                            <div class="form-group col-12 s_website_form_field o_website_form_required" data-type="char">
                                <div class="row s_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto o_we_form_label" style="width: 200px" for="contact_name">Your Name<span class="o_website_form_mark"> *</span></label>
                                    <div class="col-sm">
                                        <input type="text" class="form-control o_website_form_input" name="contact_name" t-att-value="request.params.get('contact_name', '')" required=""/>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-12 s_website_form_field" data-type="char">
                                <div class="row s_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto o_we_form_label" style="width: 200px" for="phone">Phone Number</label>
                                    <div class="col-sm">
                                        <input type="text" class="form-control o_website_form_input" name="phone" t-att-value="request.params.get('phone', '')" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-12 s_website_form_field o_website_form_required" data-type="char">
                                <div class="row s_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto o_we_form_label" style="width: 200px" for="email_from">Email<span class="o_website_form_mark"> *</span></label>
                                    <div class="col-sm">
                                        <input type="text" class="form-control o_website_form_input" name="email_from" required="" t-att-value="request.params.get('email_from', '')" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-12 s_website_form_field" data-type="char">
                                <div class="row s_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto o_we_form_label" style="width: 200px" for="partner_name">Your Company</label>
                                    <div class="col-sm">
                                        <input type="text" class="form-control o_website_form_input" name="partner_name" t-att-value="request.params.get('partner_name', '')" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-12 s_website_form_field o_website_form_model_required" data-type="char">
                                <div class="row s_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto o_we_form_label" style="width: 200px" for="name">Subject</label>
                                    <div class="col-sm">
                                        <input type="text" class="form-control o_website_form_input" name="name" required="" t-att-value="request.params.get('name', '')" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-12 s_website_form_field o_website_form_required" data-type="text">
                                <div class="row s_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto o_we_form_label" style="width: 200px" for="description">Your Question<span class="o_website_form_mark"> *</span></label>
                                    <div class="col-sm">
                                        <textarea class="form-control o_website_form_input" name="description" required=""><t t-esc="request.params.get('description', '')"/></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-12 o_we_form_submit">
                                <div class="row s_no_resize s_col_no_bgcolor">
                                    <div style="width: 200px" class="col-sm-auto o_we_form_label"/>
                                    <div class="col-sm">
                                        <a href="#" role="button" class="btn btn-primary btn-lg o_website_form_send">Submit</a>
                                        <span id="o_website_form_result"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
			</xpath>
		</template>

        <template id="assets_editor" name="Website CRM Assets Editor" inherit_id="website.assets_editor">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/website_crm/static/src/js/website_crm_editor.js"></script>
            </xpath>
        </template>

        <template id="assets_tests" name="Website CRM Assets Tests" inherit_id="web.assets_tests">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/website_crm/static/tests/tours/website_crm.js"></script>
            </xpath>
        </template>

</odoo>
